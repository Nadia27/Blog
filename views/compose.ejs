<%- include('partials/header') -%>

  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="title">Post Title:</label>
      <input class="form-control" id="title" type="text" name="postTitle">
    </div>
    <div class="form-group">
      <label for="Textarea">Today's thoughts:</label>
      <textarea class="form-control" id="Textarea" name="postText" rows="5"></textarea>
    </div>    
    <button type="submit" class="btn btn-lg" name="button">Post</button>
  </form>

<%- include('partials/footer') -%>
